<!DOCTYPE html>
<html data-ng-app="spacewarApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}SpaceWar{% endblock %}</title>

    {# Block for CSS #}
    {% block stylesheet %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
    {# <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css" /> #}
    <!-- Bootstrap Slate theme CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/core/css/bootstrap-slate-theme.css') }}" />
    <!-- SpaceWar CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/core/css/spacewar-core.css') }}" />
    {% endblock %}

    {# Block for JavaScrit #}
    {% block javascript %}
    <!-- AngularJS -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <!-- jQuery -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <!-- SpaceWar JavaScript -->
    <script src="{{ asset('bundles/core/js/spacewar-core.js') }}"></script>
    {% endblock %}

</head>
<body>{% block body %}

    <!-- Navigation bar top fixed -->
    <nav class="navbar navbar-default navbar-static-top"><div class="container">
        <!-- Header of nav -->
        <header class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <span class="navbar-brand">SpaceWar</span>
        </header>
        <div id="navbar" class="navbar-collapse collapse">
            <!-- Commons spacial links in right position -->
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" data-toggle="modal" data-target="#loginModal">
                    Login
                </a></li>
            </ul>
            <!-- Links for navigation -->
            <ul class="nav navbar-nav" data-ng-controller="navbarCtrl">
            {% block nav %}
                <li data-ng-class="{ active: isActive('{{ path('core_index') }}') }">
                <a href="{{ path('core_index') }}">Home</a></li>
                {#<li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Dropdown <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Test <span class="badge">3</span></a></li>
                    </ul>
                </li>#}
            {% endblock %}</ul>
        </div>
    </div></nav>

    {% block content %}{#<section class="container">
        Hello!
    </section>#}{% endblock %}

    {# Login modal #}
    {{ include('coreBundle:Default:login_modal_form.html.twig') }}

{% endblock %}</body>
</html>
